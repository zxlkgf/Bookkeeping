<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/grey_f3f3f3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:id="@+id/dialog_more_btn_overview"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/it_jilu"
            android:gravity="center"
            android:padding="20dp"
            android:text="概览"
            android:background="@drawable/shadow_btn"
            />
        <Button
            android:id="@+id/dialog_more_btn_chart"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/it_xiqing"
            android:gravity="center"
            android:padding="20dp"
            android:text="图表总览"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/shadow_btn"
            />
        <Button
            android:id="@+id/dialog_more_btn_setting"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/it_shezhi"
            android:gravity="center"
            android:padding="20dp"
            android:text="设置"
            android:background="@drawable/shadow_btn"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="3"
        >
        <Button
            android:id="@+id/dialog_more_btn_about"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:drawableTop="@mipmap/it_guanyu"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginEnd="30dp"
            android:text="关于"
            android:background="@drawable/shadow_btn"
            />
    </LinearLayout>
    <ImageView
        android:id="@+id/dialog_more_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/ih_error"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/shadow_btn"
        />
</LinearLayout>