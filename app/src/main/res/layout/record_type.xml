<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_header_shape"
    android:layout_marginBottom="5dp"
    >
    <RelativeLayout
        android:id="@+id/record_type_rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/record_type_iv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/out"
            />
        <TextView
            android:id="@+id/record_type_tv_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="支出"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/record_type_iv1"
            />
        <Switch
            android:id="@+id/record_type_sw_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ios_style"
            android:text="@null"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:background="@color/grey_f3f3f3"
        android:layout_gravity="center"
        />
    <RelativeLayout
        android:id="@+id/record_type_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/record_type_rl1"
        >
        <ImageView
            android:id="@+id/record_type_iv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/in"
            />
        <TextView
            android:id="@+id/record_type_tv_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="收入"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/record_type_iv2"
            android:layout_marginStart="5dp"
            />
        <Switch
            android:id="@+id/record_type_sw_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ios_style"
            android:text="@null"
            android:layout_marginEnd="10dp"
            />
    </RelativeLayout>
</LinearLayout>